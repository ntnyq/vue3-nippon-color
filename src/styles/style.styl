@require '~normalize.styl'
@require './core/index'

*
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

  &:before, &:after
    box-sizing inherit

@font-face
  font-family MONO
  src url('../assets/fonts/BPtypewrite.ttf')
  font-weight normal
  font-style normal

@font-face
  font-family XANO
  src url('../assets/fonts/XANO-mincho-U32.ttf')
  font-weight normal
  font-style normal

html
  font-family MONO, 'Avenir', Helvetica, Arial, sans-serif
  user-select none
  outline none
  -webkit-touch-callout none
  -webkit-font-smoothing antialiased

html, body, #app
  position relative
  height 100%
  overflow hidden

html
  +mq-phone()
    font-size 15px

  +mq-tablet()
    font-size 20px

  +mq-desktop()
    font-size 23.5px

  +mq-desktop-plus()
    font-size 24px

#app
  color #0c0c0c
